{
  "name": "@halfords-pro/calculator",
  "version": "0.1.1",
  "description": "An MCP server providing calculator tools for accounting and tax calculations",
  "type": "module",
  "bin": {
    "calculator-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node --eval \"import('fs').then(fs => fs.chmodSync('build/index.js', '755'))\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "decimal.js": "^10.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
